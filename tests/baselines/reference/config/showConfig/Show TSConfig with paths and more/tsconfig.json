{
    "compilerOptions": {
        "allowJs": true,
        "outDir": "./lib",
        "esModuleInterop": true,
        "module": "CommonJS",
        "moduleResolution": "Node10",
        "target": "ES2017",
        "sourceMap": true,
        "baseUrl": "./",
        "paths": {
            "@root/*": [
                "./*"
            ],
            "@configs/*": [
                "src/configs/*"
            ],
            "@common/*": [
                "src/common/*"
            ],
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "/Show TSConfig with paths and more/lib"
    ]
}
